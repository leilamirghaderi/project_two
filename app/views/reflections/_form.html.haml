= form_for @reflection do |f|
  - if @reflection.errors.any?
    #error_explanation
      %h2= "#{pluralize(@reflection.errors.count, "error")} prohibited this reflection from being saved:"
      %ul
        - @reflection.errors.full_messages.each do |message|
          %li= message

  %ol.inputs
    %li
      = f.label :title
      = f.text_field :title
    %li
      = f.label :week
      = f.text_field :week
    %li
      = f.label :reaction
      = f.text_area :reaction
    %li
      = f.label :student_name
      = f.text_field :student_name

    %li.actions
      = f.submit 'Save'
